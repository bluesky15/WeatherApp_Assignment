<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/txtDay"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:text="Mon"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="5dp" android:layout_marginRight="5dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_sun_and_cloud_white"
            android:id="@+id/imageView2"
            android:layout_margin="5dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtDay"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>